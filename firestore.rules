rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default: deny all access unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // User context data - private to each user
    // Users can only read/write their own context data
    match /context/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User metadata (onboarding status, preferences, etc.)
    // Users can only read/write their own metadata
    match /users/{uid}/meta/{document} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Future: Add rules for polls/questions here
    // match /polls/{pollId} {
    //   allow read: if request.auth != null;
    //   allow create: if request.auth != null;
    // }
  }
}
